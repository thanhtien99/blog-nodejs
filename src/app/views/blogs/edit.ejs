<%- include('../layouts/header'); %>
<h2 class="blog_manager_text">Update blog</h2>
<form method="POST" action="/blogs/update/<%= blog.id%>" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Image</label>
        <input type="file" class="form-control" id="image" name="image" value="<%= blog.image %>">
        <% if(blog){ %>
        <img src="<%='/uploads/'+ blog.image %>" class="img-thumbnail" style="width: 250px; height: 190px;">
        <% }; %>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Description</label>
        <textarea class="form-control" id="content" name="content" placeholder="Enter description"><%= blog.content %></textarea>
    </div>
    <input type="hidden" class="form-control" id="image" name="user_id" value="<%= user._id %>">
    <button type="submit" class="btn btn-primary add-new-blog">Save</button>
</form>

<%- include('../layouts/footer'); %>